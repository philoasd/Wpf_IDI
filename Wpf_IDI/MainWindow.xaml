<Window x:Class="Wpf_IDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_IDI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DataContext="{d:DesignInstance Type=local:ParametersData}"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized" Loaded="Window_Loaded" Closed="Window_Closed">

    <Window.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!--对所有相同类型的控件设置一个默认值-->
        <Style TargetType="{x:Type Border}">
            <!--<Setter Property="BorderBrush" Value="Black"/>-->
        </Style>

        <local:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
        <local:ColorToBooleanConverter x:Key="ColorToBooleanConverter"/>
        <local:BoolToLabelConverterForCalButton x:Key="BoolToLabelConverterForCalButton"/>
        <local:MultiBool2ColorConverter x:Key="MultiBool2ColorConverter"/>
        <local:MultiBool2VisibleConveter x:Key="MultiBool2VisibleConveter"/>
        <local:ValueHalf x:Key="ValueHalf"/>
    </Window.Resources>

    <Grid>
        <materialDesign:Card>
            <TabControl materialDesign:ColorZoneAssist.Mode="SecondaryDark" x:Name="TabControl"  HorizontalContentAlignment="Center" Style="{StaticResource MaterialDesignFilledUniformTabControl}">
                <TabItem Header="Camera Control">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="Black" BorderThickness="2" Margin="5,5,500,5">
                            <Image x:Name="Picture" Margin="0"/>
                        </Border>

                        <Grid Margin="1425,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ComboBox materialDesign:HintAssist.Hint="Camera Name"  materialDesign:TextFieldAssist.HasClearButton="True"
                                     SelectedIndex="0" Margin="10,10,98,0" x:Name="CameraNameList"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"  VerticalAlignment="Top"/>
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" x:Name="ConnectedCameraButton" IsChecked="False" Click="ConnectedCamera_Click"
                                     materialDesign:ToggleButtonAssist.SwitchTrackOnBackground="Green" 
                                    materialDesign:ToggleButtonAssist.SwitchTrackOffBackground="Red"
                                          Height="50" VerticalAlignment="Top" Margin="413,10,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="60">
                                <ToggleButton.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ToggleButton.RenderTransform>
                            </ToggleButton>
                            <Label FontSize="12" FontWeight="Bold"
                                Content="Exposure" HorizontalAlignment="Left" Margin="10,137,0,0" VerticalAlignment="Top" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
                            <TextBox x:Name="CameraExposure" Text="{Binding CameraExposure,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                     IsEnabled="{Binding ElementName=ConnectedCameraButton,Path=IsChecked}"
                                     BorderBrush="Black" BorderThickness="1" TextChanged="CameraExposure_TextChanged" HorizontalAlignment="Left" Margin="93,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" Height="28" TextAlignment="Center"/>

                            <Label FontSize="12" FontWeight="Bold"
                                Content="ImageWidth" HorizontalAlignment="Left" Margin="164,137,0,0" VerticalAlignment="Top" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
                            <TextBox x:Name="ImageWidth" Text="{Binding ImageWidth}"
                                     BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="247,135,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="63" Height="28" TextAlignment="Center" IsEnabled="False"/>

                            <Label FontSize="12" FontWeight="Bold"
                                Content="ImageHeight" HorizontalAlignment="Left" Margin="315,137,0,0" VerticalAlignment="Top" Width="90" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
                            <TextBox x:Name="ImageHeight" Text="{Binding ImageHeight}"
                                     BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="410,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Height="28" TextAlignment="Center" IsEnabled="False" />

                            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" IsChecked="True" x:Name="GrabOnceButton"
                                Content="Grab Once" HorizontalAlignment="Left" Margin="14,85,0,0" VerticalAlignment="Top" Height="23" Width="90"/>
                            <RadioButton Style="{StaticResource MaterialDesignRadioButton}" x:Name="GrabContinueButton"
                                Content="Grab Continue" HorizontalAlignment="Left" Margin="107,85,0,0" VerticalAlignment="Top" Height="23" Width="108"/>

                            <Button x:Name="GrabButton" Click="GrabButton_Click" IsEnabled="{Binding ElementName=ConnectedCameraButton,Path=IsChecked}"
                                    materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}"  Background="Green" HorizontalAlignment="Left" Margin="227,76,0,0" Width="120" VerticalAlignment="Top" Height="40">
                                <TextBlock x:Name="CameraGrabMovement" Text="Grab Start"/>
                            </Button>

                            <Button IsEnabled="{Binding ElementName=ConnectedCameraButton,Path=IsChecked,Converter={StaticResource BooleanNegationConverter}}"
                                    Background="Green" x:Name="ReSearchCameraButton" Click="ReSearchCameraButton_Click"
                                     materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" Margin="353,76,0,0">
                                <TextBlock x:Name="CameraReSearch" Text="ReSearch Camera" FontSize="11"/>
                            </Button>
                            <Button Background="Green" x:Name="SaveImageButton" Click="SaveImageButton_Click" IsEnabled="{Binding ElementName=ConnectedCameraButton,Path=IsChecked}"
                                     materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="347,186,0,0" Height="38" Width="112">
                                <TextBlock Text="Save Image" FontSize="12"/>
                            </Button>

                            <Button Background="Green" x:Name="CameraCalibrationButton" Click="CameraCalibrationButton_Click" IsEnabled="{Binding ElementName=ConnectedCameraButton,Path=IsChecked}"
                                materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="335,402,0,0" Height="38" Width="140">
                                <TextBlock Text="Camera Calibration" FontSize="12"/>
                            </Button>

                            <Button Background="Green" x:Name="Homing" Click="Homing_Click" IsEnabled="{Binding IsAllAxisEnable}"
                                materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="14,820,0,0" Height="123" Width="140">
                                <TextBlock Text="Homing" FontSize="30"/>
                            </Button>

                            <GroupBox  Margin="14,186,167,489"  x:Name="CameraCalibrationParameter" IsEnabled="{Binding ModifyParameterButtonClicked}"
                                       materialDesign:ColorZoneAssist.Mode="SecondaryMid"  Header="Camera Calibration Parameter"  Style="{StaticResource MaterialDesignGroupBox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Row 1, Column 1 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="GRID_ROW_SPACING" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 1, Column 2 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="GRID_COLUMN_SPACING" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Right"/>
                                    <!-- Row 1, Column 3 -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="GRID_ROW_NUMBER" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 1, Column 4 -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="GRID_COLUMN_NUMBER" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 1, Column 5 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Pixel_To_World_Ratio" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <!-- Row 2, Column 1 -->
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GRID_ROW_SPACING}" TextAlignment="Center" VerticalAlignment="Center" x:Name="GRID_ROW_SPACING" BorderBrush="Black" BorderThickness="1"/>
                                    <!-- Row 2, Column 2 -->
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GRID_COLUMN_SPACING}" TextAlignment="Center" VerticalAlignment="Center" x:Name="GRID_COLUMN_SPACING" BorderBrush="Black" BorderThickness="1"/>
                                    <!-- Row 2, Column 3 -->
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding GRID_ROW_NUMBER}" TextAlignment="Center" VerticalAlignment="Center" x:Name="GRID_ROW_NUMBER" BorderBrush="Black" BorderThickness="1"/>
                                    <!-- Row 2, Column 4 -->
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GRID_COLUMN_NUMBER}" TextAlignment="Center" VerticalAlignment="Center" x:Name="GRID_COLUMN_NUMBER" BorderBrush="Black" BorderThickness="1"/>
                                    <!-- Row 2, Column 5 -->
                                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Pixel_To_World_Ratio}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Pixel_To_World_Ratio" BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>
                                </Grid>
                            </GroupBox>
                            <Button x:Name="ModifyParameterButton" Click="ModifyParameterButton_Click"
                                materialDesign:ButtonAssist.CornerRadius="10" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="335,324,0,0" Height="47" Width="138">
                                <TextBlock Text="{Binding ModifyParameterButtonClicked,Converter={StaticResource BoolToLabelConverterForCalButton},ConverterParameter='Save Calibration Parameter;Modify Calibration Paramete'}" x:Name="CameraCalibrationParameterTextBlock" FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
                                <Button.Background>
                                    <MultiBinding Converter="{StaticResource MultiBool2ColorConverter}">
                                        <Binding Path="ModifyParameterButtonClicked"/>
                                    </MultiBinding>
                                </Button.Background>
                            </Button>
                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem Header="Motor Control">
                    <Grid>
                        <Border BorderBrush="Black" BorderThickness="2" Margin="5,5,800,5">
                            <Image x:Name="Picture_Motor" Margin="0" />
                        </Border>

                        <Grid Margin="1125,0,0,0">
                            <ToggleButton x:Name="ConnectedSpii" Style="{StaticResource MaterialDesignSwitchToggleButton}"  IsChecked="False" Click="ConnectedSpii_Click"
                 materialDesign:ToggleButtonAssist.SwitchTrackOnBackground="Green" 
                materialDesign:ToggleButtonAssist.SwitchTrackOffBackground="Red"
                      Height="50" VerticalAlignment="Top" Margin="374,10,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="60">
                                <ToggleButton.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ToggleButton.RenderTransform>
                            </ToggleButton>

                            <Label FontSize="16" FontWeight="Bold"
            Content="Ip" HorizontalAlignment="Left" Margin="52,20,0,0" VerticalAlignment="Top" Width="37" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
                            <TextBox x:Name="IpOfSpii" IsEnabled="{Binding ElementName=ConnectedSpii,Path=IsChecked,Converter={StaticResource BooleanNegationConverter}}"
                                     HorizontalAlignment="Left" Margin="94,21,0,0" TextWrapping="Wrap" Text="192.168.3.100" VerticalAlignment="Top" Width="105" Height="28" TextAlignment="Center"/>

                            <Label FontSize="16" FontWeight="Bold"
            Content="port" HorizontalAlignment="Left" Margin="231,20,0,0" VerticalAlignment="Top" Width="51" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
                            <TextBox x:Name="PortOfSpii" IsEnabled="{Binding ElementName=ConnectedSpii,Path=IsChecked,Converter={StaticResource BooleanNegationConverter}}"  HorizontalAlignment="Left" Margin="287,21,0,0" TextWrapping="Wrap" Text="701" VerticalAlignment="Top" Width="63" Height="28" TextAlignment="Center"/>

                            <GroupBox  Margin="52,65,0,211" IsEnabled="{Binding ElementName=ConnectedSpii,Path=IsChecked}"
                   materialDesign:ColorZoneAssist.Mode="SecondaryMid" Header="Motor Parameter"  Style="{StaticResource MaterialDesignGroupBox}" HorizontalAlignment="Left" Width="696">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Row 0, Column 0 -->
                                    <!-- Row 0, Column 1 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Velocity" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 2 -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Acceleration" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 3 -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Deceleration" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 4 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Kill Deceleration" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 5 -->
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Jerk" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 6 -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Reference Position" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 7 -->
                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Feedback Position" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 8 -->
                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Actual Velocity" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <!-- Row 0, Column 9 -->
                                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Position Error" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <ToggleButton Grid.Row="0" Grid.Column="0" Width="60" IsEnabled="{Binding ElementName=ConnectedSpii,Path=IsChecked}"
                                                  IsChecked="{Binding IsAllAxisEnable}"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}" x:Name="EnableAllAxisButton" Click="EnableAllAxisButton_Click"
                                                  materialDesign:ToggleButtonAssist.SwitchTrackOnBackground="Green"
                                                  materialDesign:ToggleButtonAssist.SwitchTrackOffBackground="Red">
                                    </ToggleButton>

                                    <!-- Row 0, Column 1 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Axis 0(X)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Width="10" IsEnabled="False"></TextBlock>
                                        <ToggleButton Content="X" x:Name="EnableAxis0Button" Click="EnableAxis0Button_Click"
                                                      Style="{StaticResource MaterialDesignActionSecondaryToggleButton}"
                                                      IsChecked="{Binding IsEnable0}"
                                                      Background="{Binding IsChecked, Converter={StaticResource ColorToBooleanConverter}, RelativeSource={RelativeSource Self}}"/>
                                    </StackPanel>

                                    <!-- Row 0, Column 2 -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,5,0">
                                        <TextBlock Text="Axis 1(Y)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Width="10" IsEnabled="False"></TextBlock>
                                        <ToggleButton Content="X" x:Name="EnableAxis1Button" Click="EnableAxis1Button_Click"
                                                      IsChecked="{Binding IsEnable1}"
                                                      Background="{Binding IsChecked, Converter={StaticResource ColorToBooleanConverter}, RelativeSource={RelativeSource Self}}"
                                                      Style="{StaticResource MaterialDesignActionSecondaryToggleButton}" ToolTip="MaterialDesignActionSecondaryToggleButton" />
                                    </StackPanel>

                                    <!-- Row 0, Column 3 -->
                                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Axis 2(Z)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Width="10" IsEnabled="False"></TextBlock>
                                        <ToggleButton Content="X" x:Name="EnableAxis2Button" Click="EnableAxis2Button_Click"
                                                      IsChecked="{Binding IsEnable2}"
                                                      Background="{Binding IsChecked, Converter={StaticResource ColorToBooleanConverter}, RelativeSource={RelativeSource Self}}"
                                                      Style="{StaticResource MaterialDesignActionSecondaryToggleButton}" ToolTip="MaterialDesignActionSecondaryToggleButton"/>
                                    </StackPanel>


                                    <!-- Row 1, Column 1 -->
                                    <TextBox Grid.Row="1" Tag="v0" TextChanged="SetAxisMovingParameters" Grid.Column="1" Text="{Binding Velocity0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalAlignment="Center" x:Name="Velocity0" TextAlignment="Center" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis0Button,Path=IsChecked}"/>
                                    <!-- Row 1, Column 2 -->
                                    <TextBox Grid.Row="1" Tag="v1" Grid.Column="2" Text="{Binding Velocity1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Velocity1" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis1Button,Path=IsChecked}"/>
                                    <!-- Row 1, Column 3 -->
                                    <TextBox Grid.Row="1" Tag="v2" Grid.Column="3" Text="{Binding Velocity2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Velocity2" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis2Button,Path=IsChecked}"/>

                                    <!-- Row 2, Column 1 -->
                                    <TextBox Grid.Row="2" Tag="a0" Grid.Column="1" Text="{Binding Acceleration0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Acceleration0" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis0Button,Path=IsChecked}"/>
                                    <!-- Row 2, Column 2 -->
                                    <TextBox Grid.Row="2" Tag="a1" Grid.Column="2" Text="{Binding Acceleration1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Acceleration1" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis1Button,Path=IsChecked}"/>
                                    <!-- Row 2, Column 3 -->
                                    <TextBox Grid.Row="2" Tag="a2" Grid.Column="3" Text="{Binding Acceleration2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Acceleration2" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis2Button,Path=IsChecked}"/>

                                    <!-- Row 3, Column 1 -->
                                    <TextBox Grid.Row="3" Tag="d0" Grid.Column="1" Text="{Binding Deceleration0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Deceleration0" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis0Button,Path=IsChecked}"/>
                                    <!-- Row 3, Column 2 -->
                                    <TextBox Grid.Row="3" Tag="d1" Grid.Column="2" Text="{Binding Deceleration1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Deceleration1" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis1Button,Path=IsChecked}"/>
                                    <!-- Row 3, Column 3 -->
                                    <TextBox Grid.Row="3" Tag="d2" Grid.Column="3" Text="{Binding Deceleration2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Deceleration2" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis2Button,Path=IsChecked}"/>

                                    <!-- Row 4, Column 1 -->
                                    <TextBox Grid.Row="4" Tag="k0" Grid.Column="1" Text="{Binding KillDeceleration0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="KillDeceleration0" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis0Button,Path=IsChecked}"/>
                                    <!-- Row 4, Column 2 -->
                                    <TextBox Grid.Row="4" Tag="k1" Grid.Column="2" Text="{Binding KillDeceleration1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="KillDeceleration1" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis1Button,Path=IsChecked}"/>
                                    <!-- Row 4, Column 3 -->
                                    <TextBox Grid.Row="4" Tag="k2" Grid.Column="3" Text="{Binding KillDeceleration2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="KillDeceleration2" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis2Button,Path=IsChecked}"/>

                                    <!-- Row 5, Column 1 -->
                                    <TextBox Grid.Row="5" Tag="j0" Grid.Column="1" Text="{Binding Jerk0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Jerk0" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis0Button,Path=IsChecked}"/>
                                    <!-- Row 5, Column 2 -->
                                    <TextBox Grid.Row="5" Tag="j1" Grid.Column="2" Text="{Binding Jerk1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Jerk1" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis1Button,Path=IsChecked}"/>
                                    <!-- Row 5, Column 3 -->
                                    <TextBox Grid.Row="5" Tag="j2" Grid.Column="3" Text="{Binding Jerk2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextAlignment="Center" VerticalAlignment="Center" x:Name="Jerk2" BorderBrush="Black" BorderThickness="1" IsEnabled="{Binding ElementName=EnableAxis2Button,Path=IsChecked}"/>

                                    <!-- Row 6, Column 1 -->
                                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ReferencePosition0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ReferencePosition0" IsEnabled="False"/>
                                    <!-- Row 6, Column 2 -->
                                    <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding ReferencePosition1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ReferencePosition1" IsEnabled="False"/>
                                    <!-- Row 6, Column 3 -->
                                    <TextBox Grid.Row="6" Grid.Column="3" Text="{Binding ReferencePosition2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ReferencePosition2" IsEnabled="False"/>

                                    <!-- Row 7, Column 1 -->
                                    <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding FeedbackPosition0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="FeedbackPosition0" IsEnabled="False"/>
                                    <!-- Row 7, Column 2 -->
                                    <TextBox Grid.Row="7" Grid.Column="2" Text="{Binding FeedbackPosition1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="FeedbackPosition1" IsEnabled="False"/>
                                    <!-- Row 7, Column 3 -->
                                    <TextBox Grid.Row="7" Grid.Column="3" Text="{Binding FeedbackPosition2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="FeedbackPosition2" IsEnabled="False"/>

                                    <!-- Row 8, Column 1 -->
                                    <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding ActualVelocity0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ActualVelocity0" IsEnabled="False"/>
                                    <!-- Row 8, Column 2 -->
                                    <TextBox Grid.Row="8" Grid.Column="2" Text="{Binding ActualVelocity1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ActualVelocity1" IsEnabled="False"/>
                                    <!-- Row 8, Column 3 -->
                                    <TextBox Grid.Row="8" Grid.Column="3" Text="{Binding ActualVelocity2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="ActualVelocity2" IsEnabled="False"/>

                                    <!-- Row 9, Column 1 -->
                                    <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding PositionError0,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="PositionError0" IsEnabled="False"/>
                                    <!-- Row 9, Column 2 -->
                                    <TextBox Grid.Row="9" Grid.Column="2" Text="{Binding PositionError1,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="PositionError1" IsEnabled="False"/>
                                    <!-- Row 9, Column 3 -->
                                    <TextBox Grid.Row="9" Grid.Column="3" Text="{Binding PositionError2,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat={}{0:F3}}" TextAlignment="Center" VerticalAlignment="Center" x:Name="PositionError2" IsEnabled="False"/>

                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Moving" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border Grid.Row="10" Grid.Column="1" x:Name="IsMoving0" 
                                           CornerRadius="15" VerticalAlignment="Center" Width="30" Height="30" Background="{Binding IsMoving0, Converter={StaticResource ColorToBooleanConverter}}"/>
                                    <Border Grid.Row="10" Grid.Column="2" x:Name="IsMoving1"
                                            Background="{Binding IsMoving1, Converter={StaticResource ColorToBooleanConverter}}" CornerRadius="15" VerticalAlignment="Center" Width="30" Height="30"/>
                                    <Border Grid.Row="10" Grid.Column="3" x:Name="IsMoving2"
                                            Background="{Binding IsMoving2, Converter={StaticResource ColorToBooleanConverter}}" CornerRadius="15" VerticalAlignment="Center" Width="30" Height="30"/>

